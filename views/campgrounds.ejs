<% include partials/header %>

  <div class="container">   
    <header class="jumbotron">
      <div class="container">

        <h1> Campgrounds! </h1>
        
        <p>  
          <a class="btn btn-primary btn-lg" href="/campgrounds/new"> Create a new campground </a>
        </p>
        
      </div>
    </header>
      
    <div class="row text-center" style="display:flex; flex-wrap: wrap">
      <% for (var i = 0; i < campGrounds.length; i++) { %>
        <div class="col-md-3 col-sm-6">
          <div class="thumbnail">
            <img src="<%= campGrounds[i].image %>" alt="">

              <div class="caption">
                <h4><%= campGrounds[i].name %> </h4>
              </div>
              <p> 
                <a href="/campgrounds/<%= campGrounds[i]._id %>" class="btn btn-primary"> More Info </a>
              </p>
          </div>
        </div> 
        <% } %>
      </div>
    </div>
    
<% include partials/footer %>